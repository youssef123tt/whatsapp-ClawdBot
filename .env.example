# WhatsApp ClawdBot Environment Variables
# Gemini Edition

# Google Gemini API Key (required)
GOOGLE_API_KEY=REDACTED_API_KEY

# Voyage AI API Key (optional, for better embeddings)
# If not provided, will use ChromaDB's default embeddings
VOYAGE_API_KEY=your_voyage_api_key_here

# WhatsApp Configuration
WHATSAPP_SESSION_PATH=./session

# Admin Phone Numbers (comma-separated, with country codes)
# Only these numbers can interact with the bot
ADMIN_PHONE_NUMBERS=+1234567890,+0987654321

# Database Configuration
DATABASE_URL=sqlite:///clawdbot.db
SCHEDULER_DB_URL=sqlite:///scheduler.db

# RAG Configuration
RAG_ENABLED=true
RAG_VECTOR_DB=chromadb
RAG_EMBEDDING_MODEL=voyage-2
RAG_CHUNK_SIZE=1000
RAG_TOP_K=5

# Scheduler Configuration
SCHEDULER_ENABLED=true
SCHEDULER_TIMEZONE=UTC

# Feature Flags
ENABLE_SUMMARIZATION=true
ENABLE_SCHEDULING=true
ENABLE_RAG=true

# Logging
LOG_LEVEL=INFO
